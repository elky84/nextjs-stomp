{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "msedge",
        "request": "launch",
        "name": "Launch Chrome",
        "url": "http://localhost:3000/",
        "webRoot": "${workspaceFolder}"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Next.js",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run-script",
          "dev"
        ],
      }
    ],
    "compounds": [
      {
        "name": "Debug Next.js + Chrome",
        "configurations": [
          "Launch Next.js",
          "Launch Chrome"
        ]
      }
    ]
  }